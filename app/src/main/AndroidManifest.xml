<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Internet permission (for loading external resources from the web) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional: Legacy external storage read permission. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- Permission to write to external storage (required for file downloads to device storage on Android <10) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Permission for download manager to access files -->
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" tools:ignore="MissingPermission" />

    <application
        android:allowBackup="true"
        android:label="LocalWebView"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="LocalWebView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- (Optional) Register DownloadManager receiver for notifications, only if needed
        <receiver android:name="android.app.DownloadManager$Receiver" android:exported="false"/>
        -->

    </application>
</manifest>