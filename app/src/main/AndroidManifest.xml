<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juergen874.localwebview">

    <!-- Internet permission (falls die Seite externe Ressourcen lädt) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional: Legacy external storage read permission.
         Viele moderne Apps nutzen SAF (ACTION_OPEN_DOCUMENT) und benötigen keine Runtime-Permission,
         aber für ältere / spezielle Implementationen kann das nützlich sein. -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="LocalWebView"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="LocalWebView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>